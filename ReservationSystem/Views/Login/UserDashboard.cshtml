
@{
    ViewBag.Title = "UserDashboard";
}



<body>
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="card-title">User Dashboard</h4>
                        <table class="table table-condensed">
                            <tr>
                                <td colspan="2">
                                    <button onclick="window.location.href = '@Url.Action("Index","Reservation")';" class="btn btn-block btn-dark btn-icon-text">
                                        <i class="mdi mdi-apple btn-icon-prepend mdi-36px"></i>
                                        <span class="d-inline-block text-left">
                                            Make Reservation
                                        </span>
                                    </button>
                                </td>
                                <td colspan="2">
                                    <button onclick="window.location.href = '@Url.Action("Index","User")';" class="btn btn-block btn-dark btn-icon-text">
                                        <i class="mdi mdi-android-debug-bridge btn-icon-prepend mdi-36px"></i>
                                        <span class="d-inline-block text-left">
                                            User Settings
                                        </span>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <button onclick="window.location.href = '@Url.Action("MyReseservationIndex","Reservation")';" class="btn btn-block btn-dark btn-icon-text">
                                        <i class="mdi mdi-android-debug-bridge btn-icon-prepend mdi-36px"></i>
                                        <span class="d-inline-block text-left">
                                            View My Reservations
                                        </span>
                                    </button>
                                </td>
                                <td colspan="2">
                                    <button onclick="window.location.href = '@Url.Action("Login","Login")';" class="btn btn-block btn-dark btn-icon-text">
                                        <i class="mdi mdi-android-debug-bridge btn-icon-prepend mdi-36px"></i>
                                        <span class="d-inline-block text-left">
                                            Log Out
                                        </span>
                                    </button>
                                </td>
                            </tr>
                           
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

