
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/LoginTemplate/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/css/main.css">


    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/LoginTemplate/images/img-01.png" alt="IMG">
                </div>
                <form id="registeruser" method="post">
                    <span class="login100-form-title">
                        Member Registrations
                    </span>
                    <h4 class="text-danger">@ViewBag.ErrorMessage</h4>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input required class="input100" id="Email" type="text" name="Email" placeholder="Email"/>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>


                    <div class="wrap-input100 validate-input">
                        <input required class="input100" id="FirstName" type="text" name="FirstName" placeholder="FirstName"/>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-pencil-square" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input required class="input100" id="LastName" type="text" name="LastName" placeholder="LastName"/>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-pencil-square" aria-hidden="true"></i>
                        </span>
                    </div>


                    <div class="wrap-input100 validate-input">
                        <input required class="input100" id="Department" type="text" name="Department" placeholder="Department"/>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-pencil-square" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input required class="input100" id="UserName" type="text" name="UserName" placeholder="UserName"/>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-pencil-square" aria-hidden="true"></i>
                        </span>
                    </div>


                    <div class="wrap-input100 validate-input">
                        <input required class="input100" id="PhoneNumber" type="text" name="PhoneNumber" placeholder="PhoneNumber"/>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-pencil-square" aria-hidden="true"></i>
                        </span>
                    </div>

                    <input type="hidden" id="Role" name="Role" value="User" />


                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input required class="input100" id="Password" type="password" name="Password" placeholder="Password"/>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button id="btnRegister" type="button" class="login100-form-btn">
                            Register
                        </button>
                    </div>





                    <div class="text-center p-t-136">
                        <a class="txt2" href="@Url.Action("Login","Login")">
                            Login
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <!--===============================================================================================-->
    <script src="~/Content/LoginTemplate/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginTemplate/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/LoginTemplate/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginTemplate/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginTemplate/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginTemplate/js/main.js"></script>

</body>
</html>


<script>



    


        
       


   
        $("#btnRegister").click(function () {
           $.ajax({
           
            type: 'POST',
            url: '@Url.Action("Register", "Login")',
            data: $("#registeruser").serialize()
        })

            .done(function (response) {
                swal("Great!", "User Registered Successfully! Press Login Below ", "success");
                    
        })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                swal({
                    icon: 'error',
                    title: 'Oops Fields Empty...',
                    text: 'Fill the Fields and try again!',
                    button: 'OK'

                });
            })

    });
 </script>